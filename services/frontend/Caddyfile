:80 {
    # Root directory for static files (the React app)
    root * /usr/share/caddy

    # Enable gzip compression
    encode gzip

    # Handle static files
    file_server

    # Handle SPA routing - serve index.html for all requests that don't match a file
    try_files {path} /index.html

    # Cache static assets
    @staticFiles {
        path *.js *.css *.png *.jpg *.jpeg *.gif *.ico *.svg
    }
    header @staticFiles Cache-Control "public, max-age=31536000"

    # Log all requests
    log {
        output stdout
        format console
    }
}